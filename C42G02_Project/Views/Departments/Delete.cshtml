@model Department
@{
    ViewData["Title"] = "Delete";
}

<h1 class="alert-danger">Delete @Model.Name Department?</h1>
<form method="post" asp-action="Delete">
    <div class="form-group mb-3 mt-5">
        <label asp-for="Code" class="form-label"></label>
        <input readonly class="form-control" asp-for="Code" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input readonly class="form-control" asp-for="Name" />
    </div>
    <div class="form-group mb-3">
        <label asp-for="DateOfCreation" class="form-label"></label>
        <input readonly class="form-control" asp-for="DateOfCreation" />
    </div>
    <div class="mt-3">
        <button class=" btn btn-danger" type="submit">Delete</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>