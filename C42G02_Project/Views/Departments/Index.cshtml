@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary mt-3 mb-5" asp-action="Create">Create New Department</a>

@if(Model.Any())
{
    <h1>All Departments</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <td>@Html.DisplayNameFor(d => d.Code)</td>
                <td>@Html.DisplayNameFor(d => d.Name)</td>
                <td>@Html.DisplayNameFor(d => d.DateOfCreation)</td>


                <td>Details</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
            <td>@item.Code</td>
            <td>@item.Name</td>
            <td>@item.DateOfCreation</td>

            <td><a asp-action="Details" class="btn btn-warning" asp-route-id="@item.Id"><i class="fas fa-eye" style="margin-right: 0.5rem"></i>Details</a></td>
            <td><a asp-action="Edit" class="btn btn-success" asp-route-id="@item.Id"><i class="fa-solid fa-pen" style="margin-right: 0.5rem;"></i>Edit</a></td>
            <td><a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.Id"><i class="fa-solid fa-trash" style="margin-right: 0.5rem;"></i>Delete</a></td>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert-warning">
        <h2>No Departments</h2>
    </div>
}


