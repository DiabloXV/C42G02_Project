@model IEnumerable<Department>
@{
    ViewData["Title"] = "Index";
}

<a class="btn btn-primary mt-3 mb-5" asp-action="Create">Create New Department</a>

@if(Model.Any())
{
    <h1>All Departments</h1>
    <table class="table table-striped table-hover">
        <thead>
            <tr>

                <td class="text-center">@Html.DisplayNameFor(d => d.Code)</td>
                <td class="text-center">@Html.DisplayNameFor(d => d.Name)</td>
                <td class="text-center">@Html.DisplayNameFor(d => d.DateOfCreation)</td>


                <td class="text-center">Details</td>
                <td class="text-center">Edit</td>
                <td class="text-center">Delete</td>
            </tr>
        </thead>

        <tbody>
            @foreach (var department in Model)
            {
                <tr>
                    <td class="text-center">@department.Code</td>
                    <td class="text-center">@department.Name</td>
                    <td class="text-center">@department.DateOfCreation</td>

                    <partial name="_ButtonPartial" Model="@department.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-3 alert-warning">
        <h2>No Departments</h2>
    </div>
}


