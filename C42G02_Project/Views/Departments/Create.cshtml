@model Department
@{
    ViewData["Title"] = "Create";
}

<h1>Create New Department</h1>
<form asp-action="Create">
    <div class="mb-3 mt-5">
        <label asp-for="Code" class="form-label"></label>
        <input class="form-control" asp-for = "Code"/>
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input class="form-control" asp-for = "Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DateOfCreation" class="form-label"></label>
        <input class="form-control" asp-for="DateOfCreation" />
    </div>
    <div class="mt-3">
        <button class=" btn btn-success" type="submit">Save</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>
</form>

