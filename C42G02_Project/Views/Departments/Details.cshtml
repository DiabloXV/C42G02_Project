@model Department
@{
    ViewData["Title"] = "Details";
}
<h1>@Model.Name Department Details</h1>
<div class="form-group mb-3 mt-5">
    <label asp-for="Code" class="form-label"></label>
    <input readonly class="form-control" asp-for="Code" />
</div>
<div class="form-group mb-3">
    <label asp-for="Name" class="form-label"></label>
    <input readonly class="form-control" asp-for="Name" />
</div>
<div class="form-group mb-3">
    <label asp-for="DateOfCreation" class="form-label"></label>
    <input readonly class="form-control" asp-for="DateOfCreation" />
</div>
<div class="mt-3">
    <a class="btn btn-success" asp-action="Edit">Edit</a>
    <a class="btn btn-secondary" asp-action="Index">Back</a>
</div>

