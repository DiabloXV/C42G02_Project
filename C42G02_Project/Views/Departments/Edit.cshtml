@model Department
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit @Model.Name Deapartment</h1>
<form method="post" asp-action="Edit">
    <div asp-validation-summary="All"></div>
    <div class="mb-3 mt-5">
        <label asp-for="Code" class="form-label"></label>
        <input class="form-control" asp-for="Code" />
    </div>
    <div class="mb-3">
        <label asp-for="Name" class="form-label"></label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label asp-for="DateOfCreation" class="form-label"></label>
        <input class="form-control" asp-for="DateOfCreation" />
    </div>
    <div class="mt-3">
        <button class=" btn btn-success" type="submit">Update</button>
        <a class="btn btn-danger" asp-action="Index">Cancel</a>
    </div>
</form>

